.row.mt-3
  .col-3
  .col-6
    .card
      %h4.card-header Update your avatar
      .card-body
        -# = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, id: 'user-avatar' }) do |f|
        = form_tag upload_avatar_path, { method: :post, multipart: true } do
          .custom-file
            = file_field_tag(:avatar, class: 'custom-file-field')
            = label_tag(:avatar, 'Choose File', class: 'custom-file-label')
          
          %p.mt-2
            = submit_tag 'Upload', class: 'btn btn-primary'

.row.mt-3
  .col-3
  .col-6
    .card
      %h4.card-header Update your profile
      .card-body
        = form_for @user.managed_account do |f|
          .form-group
            = f.label :username
            = f.text_field :username, class: 'form-control'
          .form-group
            = f.label :display_name
            = f.text_field :display_name, class: 'form-control'
          .form-group
            = f.label :bio
            = f.text_area :bio, class: 'form-control', placeholder: 'Tell me your story'
          .form-group
            = f.label :location
            = f.text_field :location, class: 'form-control', placeholder: 'i.e. "Mars"'
          
          %p.mt-3
            = f.submit 'Update', class: 'btn btn-primary'